     flows: 0 flowlen: 0
     queue_map_min: 3  queue_map_max: 3
     dst_min: 198.18.0.42  dst_max: 
     src_min:   src_max: 
     src_mac: 00:04:9f:08:78:b7 dst_mac: 02:5d:ae:ba:e0:00
